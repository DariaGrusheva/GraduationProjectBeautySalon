@model AboutUs;
@{
    ViewData["Title"] = "О нас";
}


<div class="container-fluid text-center">
    <div class="row">
        <div class="col-lg-6">
           <img src="~/content/logo2.jpg" class="img-fluid starting-picture" alt="Салон красоты, главная" style="margin-top: 3%">
        </div>
        
        <div class="col-lg-6 ">
            <div class="row about-us about-us-start">
                <p>@Model.Description</p>
            </div>
            <div class="row about-us">
                <p>@Model.Worksheet</p>
                <p>Мы находимся по адресу: @Model.Address</p>
                <p>Наш телефон: @Model.ContactNumber</p>
                <p>
                    Мы в соц. сетях:
                    @if (!String.IsNullOrEmpty(Model.InstaLink))
                    {
                        <a href="@Model.InstaLink"><i class="fa-brands fa-square-instagram"></i></a>
                    }
                    @if (!String.IsNullOrEmpty(Model.VkLink))
                    {
                        <a href="@Model.VkLink"><i class="fa-brands fa-vk"></i></a>
                    }
                    @if (!String.IsNullOrEmpty(Model.OkLink))
                    {
                        <a href="@Model.OkLink"><i class="fa-brands fa-square-odnoklassniki"></i></a>
                    }
                    @if (!String.IsNullOrEmpty(Model.AnyLink))
                    {
                        <a href="@Model.AnyLink"><i class="fa-solid fa-ethernet"></i></a>
                    }
                </p>
            </div>
    
        </div>
    </div>

</div>